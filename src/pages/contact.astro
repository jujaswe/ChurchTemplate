---
import BaseLayout from "../layouts/BaseLayout.astro";
import PageHeader from "../components/Sections/PageHeader.astro";
import Button from "../components/UI/Button.astro";
---

<BaseLayout
  title="Contact Us"
  description="Get in touch with our church. Find our contact information, location, and service times."
>
  <PageHeader 
    title="Contact Us" 
    subtitle="We'd love to hear from you"
    backgroundImage="/uploads/contact-header-bg.webp"
  />
  
  <!-- Contact Information -->
  <section class="py-16">
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        
        <div>
          <!-- Placeholder for Google Maps iframe -->
          <div class="w-full h-full flex items-center justify-center bg-gray-300">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d7756.66098840059!2d124.19766140256434!3d13.576608940127034!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x33a017000d78f0f1%3A0x98f02ebddc9dfbf0!2sSan%20isidro%20village%20virac%20catanduanes!5e0!3m2!1sen!2sph!4v1763907469451!5m2!1sen!2sph"
            width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
          </div>
        </div>

        <!-- Contact Information -->
        <div>
          <h2 class="text-3xl font-bold mb-6">Contact Information</h2>
          
          <div class="space-y-8">
            <div class="flex items-start">
              <div class="flex-shrink-0 mt-1">
                <div class="w-12 h-12 rounded-full bg-primary-100 flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-xl font-bold mb-1">Address</h3>
                <address class="not-italic text-gray-700">
                  <p>053 Balmadrid Bldg., Broadway st.</p>
                  <p>San Isidro Village, Constantino (Poblacion)</p>
                  <p>Virac, Catanduanes</p>
                </address>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="flex-shrink-0 mt-1">
                <div class="w-12 h-12 rounded-full bg-primary-100 flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-xl font-bold mb-1">Phone</h3>
                <p class="text-gray-700">
                  <a href="tel:+639175060958" class="hover:text-primary-600">
                    0917 506 0958
                  </a>
                  <br />
                  <a href="tel:+639159859233" class="hover:text-primary-600">
                    0915 985 9233
                  </a>
